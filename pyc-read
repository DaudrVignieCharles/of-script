import imp
import dis
from os.path import basename, splitext
from sys import argv
 
path = argv[-1]
print(path)
base = basename(path)
name, ext = splitext(base)
 
print("Disassembling '%s'...\n" % base)
 
module = imp.load_module(name,
                         open(path, 'rb'),
                         path,
                         ('.pyc', 'rb', imp.PY_COMPILED))
 
dis.dis(module)
